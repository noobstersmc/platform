# Target
MC_HOST=192.168.4.33
MC_PORT=25577
MC_VERSION=1.21.4

# Auth: microsoft or offline
MC_AUTH=microsoft

# For microsoft auth use your account email.
# Leave MC_PASSWORD empty to use device-code login (recommended).
MC_USERNAME=
MC_PASSWORD=
MC_PROFILE_FOLDER=.profiles

# Comma separated commands sent after spawn
MC_START_COMMANDS=/server

# Reconnect behavior
MC_AUTO_RECONNECT=true
MC_RECONNECT_DELAY_MS=5000

# Local control API used by automation/containers
MC_CONTROL_ENABLED=true
MC_CONTROL_HOST=127.0.0.1
MC_CONTROL_PORT=30077
# Optional bearer token for API auth
MC_CONTROL_TOKEN=

# Web viewer (what the bot sees)
MC_VIEWER_ENABLED=true
MC_VIEWER_HOST=127.0.0.1
MC_VIEWER_PORT=30078
MC_VIEWER_FIRST_PERSON=true

# Number of recent events kept in memory endpoint
MC_MEMORY_SIZE=250

# Autonomous inference loop (OpenRouter)
MC_AUTONOMOUS_ENABLED=false
MC_AUTONOMOUS_TICK_MS=4000
MC_AUTONOMOUS_ACTION_TIMEOUT_MS=20000
MC_AUTONOMOUS_MEMORY_WINDOW=40
MC_AUTONOMOUS_GOAL=Survive, stay safe, and follow server rules while making useful progress.
MC_AUTONOMOUS_ALLOWED_ACTIONS=chat,move,stop,look,dig,break,place,equip,interact,useItem,craft,inventory,observe
MC_AUTONOMOUS_VERBOSE_LOGS=true
MC_AUTONOMOUS_ALLOW_DESTRUCTIVE=false
MC_AUTONOMOUS_CHAT_COOLDOWN_MS=20000
MC_AUTONOMOUS_SELF_REPORT_MS=45000
MC_AUTONOMOUS_REFLECTION_ENABLED=true
MC_AUTONOMOUS_REFLECTION_INTERVAL_MS=10000
MC_AUTONOMOUS_REFLECTION_MAX_TOKENS=220

# OpenRouter model config
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4.1-mini
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=
OPENROUTER_APP_NAME=mc-bot
OPENROUTER_TEMPERATURE=0.2
OPENROUTER_MAX_TOKENS=300

# In-game chat control (e.g. "!goal gather wood")
MC_CHAT_CONTROL_ENABLED=true
MC_CHAT_CONTROL_PREFIX=!
# Optional allowlist of usernames (comma separated). Empty = any player can control.
MC_CHAT_CONTROL_ADMINS=
MC_CHAT_DIRECTIVE_ENABLED=true
MC_CHAT_DIRECTIVE_TTL_MS=60000

# Persistent state restore behavior
MC_STATE_RESTORE_GOAL=false

# Continuous random exploration (set true to wander when idle)
MC_AUTONOMOUS_CONTINUOUS_MOVE_ENABLED=false
